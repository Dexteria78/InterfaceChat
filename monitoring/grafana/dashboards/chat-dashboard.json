{
  "title": "Chat DevOps - Monitoring",
  "tags": ["chat", "ollama", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "panels": [
      {
        "id": 1,
        "title": "Services Status",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{job=\"backend\"}",
            "legendFormat": "Backend",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Messages",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "chat_messages_total",
            "legendFormat": "Messages",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "blue"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Messages Rate (per minute)",
        "type": "graph",
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(chat_messages_total[1m]) * 60",
            "legendFormat": "Messages/min",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages/min"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        }
      },
      {
        "id": 4,
        "title": "Ollama Response Time (seconds)",
        "type": "graph",
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 17
        },
        "targets": [
          {
            "expr": "ollama_response_duration_seconds",
            "legendFormat": "Response time",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Seconds"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "show": true
        }
      },
      {
        "id": 5,
        "title": "Backend CPU Usage",
        "type": "graph",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 26
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m])",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "CPU %"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Backend Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 26
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "Memory",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
